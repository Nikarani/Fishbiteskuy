<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormFaq">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:contentDescription="Back Button"
        android:minHeight="48dp"
        android:minWidth="48dp" />

    <!-- Profile Icon -->
    <ImageButton
        android:id="@+id/iconProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="profile akun"
        android:scaleType="fitCenter"
        android:src="@drawable/akun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="95dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_fishbites" />

    <!--text butuh informasi-->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="271dp"
        android:layout_height="71dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="127dp"
        android:fontFamily="@font/readex_boldd"
        android:text="Butuh Informasi Lebih? Sampaikan Pertanyaanmu!"
        android:textColor="@color/ijo"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--bg ulasan ijo!-->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="396dp"
        android:layout_height="833dp"
        android:layout_marginTop="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_ijo" />

    <!-- Background for EditText 2 (bg_ulasan) -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="340dp"
        android:fontFamily="@font/readex_boldd"
        android:text="Email "
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/bg_inputfaq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Background input"/>

    <EditText
        android:id="@+id/editTextUlasan1"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/readexpro_light"
        android:hint="nama anda"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@id/imageButton2"
        app:layout_constraintTop_toTopOf="@id/imageButton2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/readex_boldd"
        android:text="Nama "
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/bg_inputfaq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:contentDescription="Background input"/>

    <EditText
        android:id="@+id/editTextUlasan"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/readexpro_light"
        android:hint="nama anda"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@id/imageButton2"
        app:layout_constraintTop_toTopOf="@id/imageButton3" />

    <!-- Background for EditText 3 (bg_ulasan) -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="188dp"
        android:layout_height="28dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="435dp"
        android:fontFamily="@font/readex_boldd"
        android:text="Kategori Pertanyaan"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/bg_inputfaq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="195dp"
        android:contentDescription="Background input"/>

    <EditText
        android:id="@+id/editTextUlasan2"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="186dp"
        android:fontFamily="@font/readexpro_light"
        android:hint="Kategori Pertanyaan"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@id/imageButton4"
        app:layout_constraintTop_toTopOf="@id/imageButton2" />

    <!-- Background for EditText 4 (bg_ulasan) -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="188dp"
        android:layout_height="28dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="525dp"
        android:fontFamily="@font/readex_boldd"
        android:text="Deskripsi Pertanyaan"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/bg_deskripsiformfaq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="290dp"
        android:contentDescription="Background input"/>

    <EditText
        android:id="@+id/editTextUlasan3"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/readexpro_light"
        android:hint="Deskripsi Pertanyaan"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@id/imageButton5"
        app:layout_constraintTop_toTopOf="@id/imageButton2" />

    <!--button kirim!-->
    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/button_kirimfaq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginStart="145dp"
        android:layout_marginTop="455dp"
        android:contentDescription="Background input"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="188dp"
        android:layout_height="28dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="735dp"
        android:fontFamily="@font/readex_boldd"
        android:text="Kirim FAQ"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>